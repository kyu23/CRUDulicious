@{
    ViewData["Title"] = "Updated Dish Profile";
}
@model Dish;

<div class="row">
    <div class="offset-sm-3 col-sm-6">
        <form action="/dish/@Model.DishId/update" class="card" method="post"> @* asp-action put in the method name, not the route. *@
        <div class="card-header bg-dark text-white">
            Update a Dish: 
        </div>
        <div class="form-group">
            <label asp-for="Name">Name: </label>
            <input asp-for="Name" class="form-control">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Chef">Chef: </label>
            <input asp-for="Chef" class="form-control">
            <span class="text-danger" asp-validation-for="Chef"></span>
        </div>
        <div class="form-group">
            <label asp-for="Tastiness">Tastiness: </label>
            <input asp-for="Tastiness" class="form-control">
            <span class="text-danger" asp-validation-for="Tastiness"></span>
        </div>
        <div class="form-group">
            <label asp-for="Calories">Calories: </label>
            <input asp-for="Calories" class="form-control">
            <span class="text-danger" asp-validation-for="Calories"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description: </label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <input type="submit" class="btn btn-warning btn-outline-dark" value="Update">
    </form>
    </div>
</div>