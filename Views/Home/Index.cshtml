@{
    ViewData["Title"] = "Here be Pirates";
}
@model List<Dish>

<h1>Welcome to CRUDelicious</h1> 

<a href="/create" class="btn btn-primary">Add a Dish</a>

<p>Check out some recent dishes!</p>

-------------------------------------
<table class="table-striped table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Chef</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Dish d in Model)
        {
            <tr>
                <td>
                    <a href="/dish/@d.DishId">@d.Name</a>
                </td>
                <td>@d.Chef</td>
            </tr>
        }
    </tbody>
</table>


